{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "letsencrypt-etc",
            "host": {
                "sourcePath": "/etc/letsencrypt"
            }
        },
        {
            "name": "letsencrypt-var-lib",
            "host": {
                "sourcePath": "/var/lib/letsencrypt"
            }
        },
        {
            "name": "letsencrypt-webroot",
            "host": {
                "sourcePath": "/tmp/letsencrypt/www"
            }
        }
    ],
    "containerDefinitions": [
        {
            "name": "apis",
            "image": "lagobetech/lgbsc-backend:1.0.3",
            "essential": true,
            "memoryReservation": 128,
            "portMappings": [
                {
                    "hostPort": 8000,
                    "containerPort": 8000
                }
            ]
        },
        {
            "name": "www",
            "image": "lagobetech/lgbsc-frontend:1.0.5",
            "essential": true,
            "memoryReservation": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "links": [
                "apis",
                "letsencrypt"
            ]
        },
        {
            "name": "letsencrypt",
            "image": "quay.io/letsencrypt/letsencrypt:latest",
            "mountPoints": [
                {
                    "sourceVolume": "letsencrypt-etc",
                    "containerPath": "/etc/letsencrypt"
                },
                {
                    "sourceVolume": "letsencrypt-var-lib",
                    "containerPath": "/var/lib/letsencrypt"
                },
                {
                    "sourceVolume": "letsencrypt-webroot",
                    "containerPath": "/var/www"
                }
            ]
        }
    ]
}